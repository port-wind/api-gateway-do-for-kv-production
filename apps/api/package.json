{
  "name": "@gateway/api",
  "version": "1.0.0",
  "description": "API Gateway - Cloudflare Worker application",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "./deploy.sh",
    "deploy:auto": "./deploy.sh -y",
    "deploy:direct": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env dev",
    "deploy:production": "wrangler deploy --env production",
    "tail:dev": "wrangler tail --env dev",
    "tail:production": "wrangler tail --env production",
    "generate:route": "node scripts/generate-route.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:unit": "COVERAGE=false vitest run tests/unit/",
    "test:integration": "COVERAGE=false vitest run tests/integration/",
    "test:e2e": "COVERAGE=false vitest run tests/e2e/",
    "test:ui": "vitest --ui",
    "test:coverage": "COVERAGE=true vitest run --coverage",
    "test:coverage:skip": "COVERAGE=false vitest run",
    "test:watch": "vitest --watch",
    "test:ci": "COVERAGE=false vitest run --reporter=verbose",
    "lint": "tsc --noEmit",
    "lint:fix": "tsc --noEmit",
    "build": "echo 'API build complete - Cloudflare Worker ready'",
    "typecheck": "tsc --noEmit",
    "performance": "node scripts/performance-test.js",
    "performance:prod": "node scripts/performance-test.js https://your-worker.workers.dev",
    "precommit": "npm run typecheck && npm run test:coverage:skip",
    "prepush": "npm run test:integration"
  },
  "keywords": [
    "api",
    "gateway",
    "cloudflare",
    "worker"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.9.4",
    "@cloudflare/workers-types": "^4.20250620.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "bloom-filters": "^3.0.4",
    "c8": "^10.1.3",
    "miniflare": "^4.20250923.0",
    "tdigest": "^0.1.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "vitest-environment-miniflare": "^2.14.4",
    "wrangler": "^4.21.2"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^0.19.8",
    "@hono/zod-validator": "^0.7.3",
    "hono": "^4.8.3",
    "prompts": "^2.4.2",
    "zod": "^3.25.67"
  }
}
